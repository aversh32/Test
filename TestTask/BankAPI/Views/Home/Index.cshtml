<div id="tableBlock"></div>
<div id="editBlock">
    <h3>Редактирование оплаты</h3>
    <table>
        <tr><td><input type="hidden" id="editId" /></td><td></td></tr>
        <tr><td><label>Название: </label></td><td><input type="text" id="editName" /></td></tr>
        <tr><td><label>Автор: </label></td><td><input type="text" id="editAuthor" /></td></tr>
        <tr><td><label>Год: </label></td><td><input type="number" id="editYear" /></td></tr>
    </table>
    <button id="editBook">Сохранить</button>
</div>
<div id="createBlock">
    <h3>Добавление книги</h3>
    <table>
        <tr><td><label>Название: </label></td><td><input type="text" id="addName" /></td></tr>
        <tr><td><label>Автор: </label></td><td><input type="text" id="addAuthor" /></td></tr>
        <tr><td><label>Год: </label></td><td><input type="number" id="addYear" /></td></tr>
    </table>
    <button id="addBook">Сохранить</button>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        GetAllOrders();

        $("#editBook").click(function (event) {
            event.preventDefault();
            EditOrder();
        });

        $("#addBook").click(function (event) {
            event.preventDefault();
            AddOrder();
        });

    });
    // Получение всех книг по ajax-запросу
    function GetAllOrders() {

        $("#createBlock").css('display', 'block');
        $("#editBlock").css('display', 'none');
        $.ajax({
            url: 'http://localhost:2512/api/values',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                WriteResponse(data);
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
 // Добавление новой книги
    function AddOrder() {
        // получаем значения для добавляемой книги
        var order = {
            Name: $('#addName').val(),
            Author: $('#addAuthor').val(),
            Year: $('#addYear').val()
        };

        $.ajax({
            url: '/api/values',
            type: 'POST',
            data: JSON.stringify(order),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                GetAllOrders();
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
 // Удаление книги
    function DeleteOrder(id) {

        $.ajax({
            url: '/api/values/' + id,
            type: 'DELETE',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                GetAllOrders();
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
    // редактирование книги
    function EditOrder() {
        var id = $('#editId').val()
        // получаем новые значения для редактируемой книги
        var order = {
            Id: $('#editId').val(),
            Name: $('#editName').val(),
            Author: $('#editAuthor').val(),
            Year: $('#editYear').val()
        };
        $.ajax({
            url: '/api/values/' + id,
            type: 'PUT',
            data: JSON.stringify(order),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                GetAllOrders();
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
 // вывод полученных данных на экран
    function WriteResponse(orders) {
        var strResult = "<table><th>ID</th><th>Название</th><th>Автор</th><th>Год издания</th>";
        $.each(orders, function (index, order) {
            strResult += "<tr><td>" + order.order_id + "</td><td> " + order.card_number + "</td><td>" +
            order.cardholder_name + "</td><td>" + order.amount_kop +
            "</td><td><a id='editItem' data-item='" + order.order_id + "' onclick='EditItem(this);' >Редактировать</a></td>" +
            "<td><a id='delItem' data-item='" + order.order_id + "' onclick='DeleteItem(this);' >Удалить</a></td></tr>";
        });
        strResult += "</table>";
        $("#tableBlock").html(strResult);

    }
    // обработчик удаления
    function DeleteItem(el) {

        // получаем id удаляемого объекта
        var id = $(el).attr('data-item');
        DeleteOrder(id);
    }
    // обработчик редактирования
    function EditItem (el) {

        // получаем id редактируемого объекта
        var id = $(el).attr('data-item');
        GetOrder(id);
    }
    // вывод данных редактируемой книги в поля для редактирования
    function ShowOrder(order) {
        if (order != null) {
            $("#createBlock").css('display', 'none');
            $("#editBlock").css('display', 'block');
            $("#editId").val(order.order_id);
            $("#editName").val(order.card_number);
            $("#editAuthor").val(order.cardholder_name);
            $("#editYear").val(order.amount_kop);
        }
        else {
            alert("Такая книга не существует");
        }
    }
    // запрос книги на редактирование
    function GetOrder(id) {

        $.ajax({
            url: '/api/values/' + id,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                ShowOrder(data);
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
</script>
